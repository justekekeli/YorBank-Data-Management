{
  "name": "bigquery-sink-yorb-transaction",
  "connector.class": "BigQuerySink",
  "tasks.max": "1",

  "topics": "yorb_transaction",

  "project": "your-gcp-project-id",
  "datasets": "your_bigquery_dataset_name",
  "autoCreateTables": "true",
  "autoUpdateSchemas": "true",
  "sanitizeTopics": "true",

  "input.data.format": "JSON",

  "key.converter": "org.apache.kafka.connect.storage.StringConverter",
  "value.converter": "org.apache.kafka.connect.json.JsonConverter",
  "value.converter.schemas.enable": "false",

  "gcp.credentials.json": "{\n  \"type\": \"service_account\",\n  \"project_id\": \"your-gcp-project-id\",\n  \"private_key_id\": \"YOUR_PRIVATE_KEY_ID\",\n  \"private_key\": \"-----BEGIN PRIVATE KEY-----\\nYOUR_PRIVATE_KEY_CONTENT\\n-----END PRIVATE KEY-----\\n\",\n  \"client_email\": \"your-service-account@your-gcp-project-id.iam.gserviceaccount.com\",\n  \"client_id\": \"YOUR_CLIENT_ID\",\n  \"auth_uri\": \"https://accounts.google.com/o/oauth2/auth\",\n  \"token_uri\": \"https://oauth2.googleapis.com/token\",\n  \"auth_provider_x509_cert_url\": \"https://www.googleapis.com/oauth2/v1/certs\",\n  \"client_x509_cert_url\": \"https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40your-gcp-project-id.iam.gserviceaccount.com\"\n}",

  "transforms": "convertTimestamp",
  "transforms.convertTimestamp.type": "org.apache.kafka.connect.transforms.TimestampConverter$Value",
  "transforms.convertTimestamp.field": "timestamp",
  "transforms.convertTimestamp.target.type": "string",
  "transforms.convertTimestamp.format": "yyyy-MM-dd'T'HH:mm:ss'Z'"
}
